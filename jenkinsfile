pipeline {
    agent any
    environment {
        JAVA_HOME = '/usr/lib/jvm/java-11-openjdk-amd64'
    }
    tools {
        jdk 'JDK11'
    }
    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Horororo1124/java_Gradle_test.git'
            }
        }
        stage('Preparation') {
            steps {
                sh 'chmod +x ./gradlew'
            }
        }
        stage('Echo JAVA_HOME') {
            steps {
                sh 'echo ${JAVA_HOME}' // 단일 따옴표가 아닌 이중 따옴표를 사용
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SonarQube_Server') {
                    sh './gradlew sonarqube'
                    sh './gradlew sonarqube -Dorg.gradle.java.home=${"JAVA_HOME"} --stacktrace'

                    sh "./gradlew sonarqube -Dsonar.projectKey=test_Jenkins -Dsonar.host.url=http://211.199.70.9:9000/ -Dsonar.login=sqp_ba34bb85fd867b97bcc39fcba7d4e2eafee52ce7"
                }
            }
        }
    }

    post {
        always {
            // 빌드 후에 실행할 작업을 추가할 수 있습니다.
            echo '빌드가 완료되었습니다.'
        }
    }
}
