pipeline {
    agent any
    tools {
        jdk 'OpenJDK 11' // Jenkins에서 설정한 JDK 이름
    }

    stages {
        stage('SCM Checkout') {
            steps {
                git branch: "master",
                url: "https://github.com/Horororo1124/java_Gradle_test.git"
            }
        }
        stage('Build') {
            steps {
                // 프로젝트 루트에서 gradlew 실행 권한 부여 (Linux 환경에만 적용)
                sh 'chmod +x ./gradlew'
                // 프로젝트 루트에서 Gradle 빌드 실행
                sh './gradlew build'
            }
        }
    
        stage('Test') {
            steps {
                    sh './gradlew test'
            }
        }
            
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SanarQube_Server') { 
                        sh './gradlew sonarqube'
//./gradlew sonarqube'
                    }
                
            }
        }
    }
}
