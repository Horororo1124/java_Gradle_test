pipeline {
    agent any
environment {
        JAVA_HOME = "/usr/lib/jvm/java-11-openjdk-amd64"
    }


    tools {
        jdk 'JDK11' // Jenkins에서 설정한 JDK 이름
    }

    stages {
        stage('SCM Checkout') {
            steps {
                git branch: "master",
                url: "https://github.com/Horororo1124/java_Gradle_test.git"
            }
        }
        stage('Build') {
            steps {
                // 프로젝트 루트에서 gradlew 실행 권한 부여 (Linux 환경에만 적용)
                sh 'chmod +x ./gradlew'
                // 프로젝트 루트에서 Gradle 빌드 실행
                sh './gradlew build'
                sh './gradlew build --stacktrace'
            }
        }
    
        stage('Test') {
            steps {
                    sh './gradlew test'

                sh './gradlew build --stacktrace'
            }
        }
            
        stage('SonarQube analysis') {
            steps {
                sonarqube{
                    properties{
                        property "sqp_ba34bb85fd867b97bcc39fcba7d4e2eafee52ce7", "test_Jenkins"
                        property "http://211.199.70.9:9000/"
                    }
                }
                withSonarQubeEnv('SonarQube_Server') { 
                        script{
                            sqProperties.each { key, value ->
                                properties([[$class: 'SonarQubeProperty', key: key, value: value]])
                        }
                        sh './gradlew sonarqube'
                sh './gradlew build --stacktrace'
                    }
                
            }
        }
    }
}
